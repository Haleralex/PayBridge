# PayBridge Environment Variables
#
# Copy this file to .env and fill in your values
# WARNING: Never commit .env file to version control!

# ============================================
# Application
# ============================================
PAYBRIDGE_APP_NAME=PayBridge
PAYBRIDGE_APP_VERSION=1.0.0
PAYBRIDGE_APP_ENVIRONMENT=development  # development, staging, production
PAYBRIDGE_APP_DEBUG=true

# ============================================
# Server
# ============================================
PAYBRIDGE_SERVER_HOST=0.0.0.0
PAYBRIDGE_SERVER_PORT=8080
PAYBRIDGE_SERVER_READ_TIMEOUT=15s
PAYBRIDGE_SERVER_WRITE_TIMEOUT=15s
PAYBRIDGE_SERVER_IDLE_TIMEOUT=60s
PAYBRIDGE_SERVER_SHUTDOWN_TIMEOUT=30s

# ============================================
# Database
# ============================================
PAYBRIDGE_DATABASE_HOST=localhost
PAYBRIDGE_DATABASE_PORT=5432
PAYBRIDGE_DATABASE_USER=postgres
PAYBRIDGE_DATABASE_PASSWORD=postgres
PAYBRIDGE_DATABASE_DATABASE=paybridge
PAYBRIDGE_DATABASE_SSL_MODE=disable
PAYBRIDGE_DATABASE_MAX_CONNECTIONS=25
PAYBRIDGE_DATABASE_MIN_CONNECTIONS=5

# Alternative: Full DATABASE_URL (legacy support)
DATABASE_URL=postgres://postgres:postgres@localhost:5432/paybridge?sslmode=disable

# ============================================
# Authentication
# ============================================
PAYBRIDGE_AUTH_JWT_SECRET=change-me-in-production-use-strong-secret-key
PAYBRIDGE_AUTH_JWT_ISSUER=paybridge
PAYBRIDGE_AUTH_ACCESS_TOKEN_EXPIRY=15m
PAYBRIDGE_AUTH_REFRESH_TOKEN_EXPIRY=168h
PAYBRIDGE_AUTH_ENABLE_MOCK_AUTH=true  # Set to false in production!

# ============================================
# CORS
# ============================================
# For production, specify exact origins:
# PAYBRIDGE_CORS_ALLOWED_ORIGINS=https://app.example.com,https://admin.example.com
PAYBRIDGE_CORS_ALLOWED_ORIGINS=*
PAYBRIDGE_CORS_ALLOW_CREDENTIALS=true

# ============================================
# Rate Limiting
# ============================================
PAYBRIDGE_RATE_LIMIT_ENABLED=true
PAYBRIDGE_RATE_LIMIT_REQUESTS_PER_MINUTE=100
PAYBRIDGE_RATE_LIMIT_BURST_SIZE=20
PAYBRIDGE_RATE_LIMIT_FINANCIAL_OPS_PER_MIN=30

# ============================================
# Logging
# ============================================
PAYBRIDGE_LOG_LEVEL=debug  # debug, info, warn, error
PAYBRIDGE_LOG_FORMAT=text  # json, text
PAYBRIDGE_LOG_OUTPUT=stdout

# ============================================
# Legacy Variables (for backward compatibility)
# ============================================
HOST=0.0.0.0
PORT=8080
ENVIRONMENT=development
LOG_LEVEL=info
